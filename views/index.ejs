<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div id="name-screen" class="absolute z-20 bg-white w-screen h-screen text-white flex items-center justify-center gap-4">
    <input type="text" id="name-input" autocomplete="off" class="py-2 px-3 rounded-md border-black border-2 text-black"
      placeholder="Enter your name">
    <button type="submit" id="name-submit" class="p-2 bg-blue-500 rounded-md disabled">Start chatting</button>
    <h3 class="name-empty-error text-red-500 text-xl absolute top-[55%] opacity-0">Name cannot be empty</h3>
    <h3 class="name-small-error text-red-500 text-xl absolute top-[58%] opacity-0">Name must contain at least 3 letters</h3>
  </div>

  <div class="main-screen flex flex-col h-screen">
    <div class="header w-screen h-20 bg-blue-500 text-black flex items-center justify-between px-2">
      <h3 class="font-medium text-2xl">Social Sync</h3>
      <h3 class="live-users font-regular text-xl"></h3>
      <h3 class="username font-regular text-xl"></h3>
    </div>
    <!-- Chat window -->
    <div class="messages-box flex-1 flex flex-col">
      <!-- Chat messages -->
      <h5 class="typing absolute z-10 top-[13%] left-[50%] transform translate-x-[-50%] translate-y-[-50%] text-gray-500 text-xl"></h5>
      <div id="messages-box" class="flex-1 p-4 overflow-y-auto">
        <div id="message-div" class="flex flex-col space-y-4">
        </div>
      </div>

      <!-- Input box -->
      <div class="p-4 border-t border-gray-200 bg-white">
        <div class="flex">
          <textarea placeholder="Type your message" id="input-area"
            class="resize-none w-full px-5 py-3 rounded-full border-2 focus:outline-none focus:border-blue-500"></textarea>
          <button id="send-button" class="ml-2 bg-blue-500 text-white rounded-md p-2">Send</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"
    integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO"
    crossorigin="anonymous"></script>
  <script src="/javascripts/script.js"></script>
</body>

</html>
